<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/termuxActivityDrawerBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="72dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浏览器设置"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/current_engine_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:padding="10dp"
            android:background="#1A4CAF50"
            android:textSize="14sp"
            android:textColor="#4CAF50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浏览器内核选择"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="?attr/colorPrimary" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <RadioGroup
                android:id="@+id/browser_engine_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <RadioButton
                    android:id="@+id/radio_chrome_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chrome Custom Tabs"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用设备上的 Chrome 内核（推荐）\n性能最好，启动速度快"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginLeft="24dp"
                    android:layout_marginBottom="8dp" />

                <RadioButton
                    android:id="@+id/radio_edge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Microsoft Edge"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用设备上的 Microsoft Edge\n在应用内以标签页形式显示"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginLeft="24dp"
                    android:layout_marginBottom="8dp" />

                <RadioButton
                    android:id="@+id/radio_webview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WebView"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用 Android 内置 WebView\n功能完整，兼容性好"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginLeft="24dp" />

            </RadioGroup>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WebView 高级设置"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="?attr/colorPrimary"
            android:id="@+id/webview_settings_title" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/webview_settings_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <CheckBox
                    android:id="@+id/checkbox_enable_javascript"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="启用 JavaScript"
                    android:checked="true"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/checkbox_enable_dom_storage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="启用 DOM 存储"
                    android:checked="true"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/checkbox_enable_cache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="启用缓存"
                    android:checked="true"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/checkbox_enable_zoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="启用缩放"
                    android:checked="true"
                    android:textSize="14sp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存设置"
            android:layout_marginTop="16dp"
            app:cornerRadius="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="说明"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Chrome Custom Tabs: 调用设备上的 Chrome 浏览器内核，在应用内以标签页形式显示，性能最佳\n• Microsoft Edge: 调用设备上的 Microsoft Edge 浏览器内核，在应用内以标签页形式显示\n• WebView: 使用 Android 系统内置的 WebView 组件，完全集成在应用内\n• 所有浏览器功能都在应用内完成，不会跳出应用"
            android:textSize="13sp"
            android:textColor="#999999"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

</ScrollView>
